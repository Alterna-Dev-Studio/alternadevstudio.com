{
  "name": "alternadevstudio.com",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "clean": "rm -rf _site && mkdir -p _site",
    "build": "pnpm exec eleventy",
    "build-nocolor": "cross-env NODE_DISABLE_COLORS=1 pnpm exec eleventy",
    "build-ghpages": "pnpm exec eleventy --pathprefix=/eleventy-base-blog/",
    "start": "pnpm exec eleventy --serve --quiet",
    "start-ghpages": "pnpm exec eleventy --pathprefix=/eleventy-base-blog/ --serve --quiet",
    "debug": "cross-env DEBUG=Eleventy* pnpm exec eleventy",
    "debugstart": "cross-env DEBUG=Eleventy* pnpm exec eleventy --serve --quiet",
    "benchmark": "cross-env DEBUG=Eleventy:Benchmark* pnpm exec eleventy",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch --detectOpenHandles",
    "test:directus": "pnpm test -- -t 'Directus'",
    "setup": "./setup-dev.sh",
    "directus:setup": "cd tools/directus && ./setup-dev-environment.sh",
    "directus:start": "cd tools/directus && docker-compose up -d",
    "directus:stop": "cd tools/directus && docker-compose down",
    "directus:sample-content": "node tools/directus/create-sample-content.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.8.0",
  "dependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@directus/sdk": "^13.0.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  }
}
