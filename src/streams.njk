---
layout: base.njk
title: Stream Recaps
---
<h1>Stream Recaps</h1>

<div class="stream-recaps">
  {% for recap in stream_recaps %}
  <article class="stream-recap-preview">
    <h2><a href="/streams/{{ recap.slug }}/">{{ recap.title }}</a></h2>
    <div class="meta">
      <time datetime="{{ recap.stream_date | date('YYYY-MM-DD') }}">
        {{ recap.stream_date | date('MMMM D, YYYY') }}
      </time>
      {% if recap.duration_minutes %}
      <span class="duration">{{ recap.duration_minutes }} minutes</span>
      {% endif %}
    </div>
    {% if recap.thumbnail %}
    <div class="thumbnail">
      <img src="{{ recap.thumbnail }}" alt="{{ recap.title }}">
    </div>
    {% endif %}
    {% if recap.topics_covered and recap.topics_covered.length > 0 %}
    <div class="topics">
      <h3>Topics:</h3>
      <ul>
        {% for topic in recap.topics_covered %}
        <li>{{ topic }}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
    <a href="/streams/{{ recap.slug }}/" class="view-recap">View Recap</a>
  </article>
  {% endfor %}
</div>
