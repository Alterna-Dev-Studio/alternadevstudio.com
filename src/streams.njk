---
layout: base.njk
title: Live Product Dev
permalink: "/streams/"
---
<main class="container mx-auto p-6">
  <section class="bg-white rounded-lg shadow-md p-8 mb-8">
    <h2 class="text-2xl font-bold text-primary mb-6">Live Product Development Streams</h2>

    <div class="stream-recaps grid grid-cols-1 md:grid-cols-2 gap-8">
  {% if stream_pages.length > 0 %}
    {% for recap in stream_pages %}
        <article class="stream-recap-preview bg-gray-50 rounded-lg overflow-hidden shadow-sm">
          {% if recap.thumbnail %}
          <div class="thumbnail h-48 overflow-hidden relative">
            <img src="{{ recap.thumbnail }}" alt="{{ recap.title }}" class="w-full h-full object-cover">
            {% if recap.duration_minutes %}
            <span class="duration absolute bottom-2 right-2 bg-black bg-opacity-70 text-white text-xs px-2 py-1 rounded">
              {{ recap.duration_minutes }} minutes
            </span>
            {% endif %}
          </div>
          {% endif %}
          <div class="p-6">
            <h3 class="text-xl font-bold text-primary mb-2">
              <a href="/streams/{{ recap.slug }}/" class="hover:text-secondary transition-colors">{{ recap.title }}</a>
            </h3>
            <div class="meta text-sm text-gray-600 mb-3">
              {% if recap.stream_date %}
              <time datetime="{{ recap.stream_date }}" class="mr-3">
                {{ recap.stream_date }}
              </time>
              {% endif %}
            </div>
            {% if recap.topics_covered and recap.topics_covered.length > 0 %}
            <div class="topics mb-4">
              <h4 class="text-sm font-semibold text-gray-600 mb-2">Topics:</h4>
              <div class="flex flex-wrap gap-2">
                {% for topic in recap.topics_covered %}
                <span class="bg-gray-200 text-gray-800 text-xs px-2 py-1 rounded">{{ topic }}</span>
                {% endfor %}
              </div>
            </div>
            {% endif %}
            <a href="/streams/{{ recap.slug }}/" class="text-secondary hover:text-accent transition-colors font-medium">View Recap â†’</a>
          </div>
        </article>
        {% endfor %}
      {% else %}
        <p class="text-gray-700 col-span-2">No stream recaps found.</p>
      {% endif %}
    </div>
  </section>
</main>
