layout: base.njk
title: Contact Us
---
<main class="container mx-auto p-6">
  <section class="bg-white rounded-lg shadow-md p-8 mb-8">
    <h2 class="text-2xl font-bold text-primary mb-4">Contact Us</h2>
    <p class="text-lg mb-6">We'd love to hear from you! Reach out to us using the information below.</p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">
      <div>
        <h3 class="text-xl font-bold text-primary mb-4">Contact Information</h3>
        <ul class="space-y-3">
          <li class="flex items-start">
            <span class="font-semibold mr-2">Email:</span>
            <a href="mailto:info@alternadevstudio.com" class="text-secondary hover:text-accent">info@alternadevstudio.com</a>
          </li>
          <li class="flex items-start">
            <span class="font-semibold mr-2">Phone:</span>
            <a href="tel:+12105551234" class="text-secondary hover:text-accent">(210) 555-1234</a>
          </li>
          <li class="flex items-start">
            <span class="font-semibold mr-2">Address:</span>
            <address class="not-italic">
              123 Tech Way<br>
              San Antonio, TX 78205<br>
              United States
            </address>
          </li>
        </ul>
      </div>
      
      <div>
        <h3 class="text-xl font-bold text-primary mb-4">Send Us a Message</h3>
        <form class="space-y-4">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
            <input type="text" id="name" name="name" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-secondary focus:border-secondary">
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <input type="email" id="email" name="email" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-secondary focus:border-secondary">
          </div>
          
          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
            <input type="text" id="subject" name="subject" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-secondary focus:border-secondary">
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
            <textarea id="message" name="message" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-secondary focus:border-secondary"></textarea>
          </div>
          
          <div>
            <button type="submit" class="bg-accent hover:bg-accent/90 text-white font-bold py-2 px-4 rounded transition-colors">
              Send Message
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>
</main>
